<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youssefbazzaoui.notebookapp.EditDomainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp">

        <EditText
            android:id="@+id/editTextDomain"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name" />

        <Button
            android:id="@+id/btnUpdomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextDomain"
            android:text="Update" />

        <Button
            android:id="@+id/btnDelDomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnUpdomain"
            android:text="Delete" />

        <LinearLayout
            android:id="@+id/domainWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/btnUpdomain"
            android:orientation="vertical"></LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
